<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Eye Disease Predictor - AI Medical diagnosis</title>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800&display=swap" rel="stylesheet">
    <style>
        * {
            margin: 0;
            padding: 0;
        }

        body {
            font-family: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', sans-serif;
            background: linear-gradient(135deg, #0f0f23 0%, #1a1a2e 50%, #16213e 100%);
            min-height: 100vh;
            color: #e2e8f0;
            position: relative;
            overflow-x: hidden;
        }

        body::before {
            content: '';
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: 
                radial-gradient(circle at 20% 80%, rgba(120, 119, 198, 0.1) 0%, transparent 50%),
                radial-gradient(circle at 80% 20%, rgba(255, 119, 198, 0.1) 0%, transparent 50%),
                radial-gradient(circle at 40% 40%, rgba(120, 219, 255, 0.05) 0%, transparent 50%);
            pointer-events: none;
            z-index: -1;
        }

        .container {
            max-width: 1200px;
            margin: 0 auto;
            padding: 0 20px;
        }

        .header {
            background: rgba(15, 15, 35, 0.95);
            backdrop-filter: blur(20px);
        }
        .nav {
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

        .logo {
            display: flex;
            align-items: center;
            gap: 12px;
            font-size: 1.8rem;
            font-weight: 700;
            color: #ffffff;
        }

        .logo i {
            background: linear-gradient(135deg, #00d4ff, #ff6b9d);
            -webkit-background-clip: text;
            background-clip: text;
            -webkit-text-fill-color: transparent;
            font-size: 2rem;
            filter: drop-shadow(0 0 10px rgba(0, 212, 255, 0.3));
        }

        /* Main Content */
        .main-content {
            padding: 4rem 0;
        }

        .hero-section {
            text-align: center;
            margin-bottom: 4rem;
        }

        .hero-title {
            font-size: 3.5rem;
            font-weight: 800;
            background: linear-gradient(135deg, #ffffff 0%, #00d4ff 50%, #ff6b9d 100%);
            -webkit-background-clip: text;
            background-clip: text;
            -webkit-text-fill-color: transparent;
            margin-bottom: 1rem;
            text-shadow: 0 4px 20px rgba(0, 0, 0, 0.5);
            filter: drop-shadow(0 0 20px rgba(0, 212, 255, 0.2));
        }

        .hero-subtitle {
            font-size: 1.3rem;
            color: rgba(226, 232, 240, 0.8);
            margin-bottom: 2rem;
            max-width: 600px;
            margin-left: auto;
            margin-right: auto;
            line-height: 1.6;
            font-weight: 400;
        }

        /* Prediction Card */
        .prediction-card {
            background: rgba(30, 41, 59, 0.8);
            backdrop-filter: blur(20px);
            border-radius: 24px;
            padding: 3rem;
            box-shadow: 0 25px 80px rgba(0, 0, 0, 0.4);
            max-width: 600px;
            margin: 0 auto;
            border: 1px solid rgba(255, 255, 255, 0.1);
            position: relative;
            overflow: hidden;
        }

        .prediction-card::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            height: 1px;
            background: linear-gradient(90deg, transparent, rgba(0, 212, 255, 0.5), transparent);
        }

        .card-title {
            font-size: 2rem;
            font-weight: 700;
            color: #ffffff;
            text-align: center;
            margin-bottom: 2rem;
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 12px;
        }

        .card-title i {
            background: linear-gradient(135deg, #00d4ff, #ff6b9d);
            -webkit-background-clip: text;
            background-clip: text;
            -webkit-text-fill-color: transparent;
            filter: drop-shadow(0 0 10px rgba(0, 212, 255, 0.3));
        }

        /* Upload Area */
        .upload-area {
            border: 2px dashed rgba(0, 212, 255, 0.4);
            border-radius: 16px;
            padding: 3rem 2rem;
            text-align: center;
            margin-bottom: 2rem;
            transition: all 0.3s ease;
            cursor: pointer;
            background: rgba(0, 212, 255, 0.05);
            position: relative;
        }

        .upload-area:hover {
            border-color: rgba(0, 212, 255, 0.6);
            background: rgba(0, 212, 255, 0.1);
            transform: translateY(-2px);
            box-shadow: 0 10px 30px rgba(0, 212, 255, 0.1);
        }

        .upload-area.dragover {
            border-color: rgba(0, 212, 255, 0.8);
            background: rgba(0, 212, 255, 0.15);
            transform: scale(1.02);
            box-shadow: 0 15px 40px rgba(0, 212, 255, 0.2);
        }

        .upload-icon {
            font-size: 4rem;
            background: linear-gradient(135deg, #00d4ff, #ff6b9d);
            -webkit-background-clip: text;
            background-clip: text;
            -webkit-text-fill-color: transparent;
            margin-bottom: 1rem;
            filter: drop-shadow(0 0 15px rgba(0, 212, 255, 0.3));
        }

        .upload-text {
            font-size: 1.2rem;
            color: #e2e8f0;
            margin-bottom: 0.5rem;
            font-weight: 500;
        }

        .upload-subtext {
            color: #94a3b8;
            font-size: 0.9rem;
        }

        .file-input {
            display: none;
        }

        .upload-btn {
            background: linear-gradient(135deg, #00d4ff, #0ea5e9);
            color: white;
            border: none;
            padding: 12px 30px;
            border-radius: 50px;
            font-size: 1rem;
            font-weight: 600;
            cursor: pointer;
            transition: all 0.3s ease;
            margin-top: 1rem;
            box-shadow: 0 4px 15px rgba(0, 212, 255, 0.2);
        }

        .upload-btn:hover {
            transform: translateY(-2px);
            box-shadow: 0 8px 25px rgba(0, 212, 255, 0.4);
        }

        /* Preview */
        .image-preview {
            max-width: 300px;
            max-height: 300px;
            border-radius: 12px;
            margin: 1rem auto;
            display: none;
            box-shadow: 0 8px 25px rgba(0, 0, 0, 0.15);
        }

        .file-info {
            background: rgba(0, 212, 255, 0.1);
            padding: 1rem;
            border-radius: 12px;
            margin: 1rem 0;
            display: none;
            border: 1px solid rgba(0, 212, 255, 0.2);
        }

        .file-name {
            font-weight: 600;
            color: #00d4ff;
        }

        /* Predict Button */
        .predict-btn {
            background: linear-gradient(135deg, #10b981, #059669);
            color: white;
            border: none;
            padding: 15px 40px;
            border-radius: 50px;
            font-size: 1.1rem;
            font-weight: 700;
            cursor: pointer;
            transition: all 0.3s ease;
            width: 100%;
            margin-top: 1.5rem;
            display: none;
            box-shadow: 0 4px 15px rgba(16, 185, 129, 0.2);
        }

        .predict-btn:hover {
            transform: translateY(-2px);
            box-shadow: 0 10px 30px rgba(16, 185, 129, 0.4);
        }

        .predict-btn:disabled {
            background: #64748b;
            cursor: not-allowed;
            transform: none;
            box-shadow: none;
        }

        /* Loading */
        .loading {
            display: none;
            text-align: center;
            margin: 2rem 0;
            color: #e2e8f0;
        }

        .spinner {
            width: 40px;
            height: 40px;
            border: 4px solid rgba(226, 232, 240, 0.2);
            border-top: 4px solid #00d4ff;
            border-radius: 50%;
            animation: spin 1s linear infinite;
            margin: 0 auto 1rem;
        }

        @keyframes spin {
            0% { transform: rotate(0deg); }
            100% { transform: rotate(360deg); }
        }

        /* Results */
        .result-section {
            margin-top: 2rem;
            padding: 2rem;
            background: rgba(0, 212, 255, 0.05);
            border-radius: 16px;
            display: none;
            border: 1px solid rgba(0, 212, 255, 0.1);
        }

        .result-title {
            font-size: 1.3rem;
            font-weight: 700;
            color: #ffffff;
            margin-bottom: 1rem;
            text-align: center;
        }

        .result-text {
            font-size: 1.5rem;
            font-weight: 600;
            text-align: center;
            padding: 1.5rem;
            border-radius: 12px;
            margin-bottom: 1rem;
        }

        .result-normal {
            background: rgba(16, 185, 129, 0.15);
            color: #10b981;
            border: 2px solid rgba(16, 185, 129, 0.3);
        }

        .result-condition {
            background: rgba(239, 68, 68, 0.15);
            color: #ef4444;
            border: 2px solid rgba(239, 68, 68, 0.3);
        }

        .disclaimer {
            background: rgba(245, 158, 11, 0.1);
            border: 1px solid rgba(245, 158, 11, 0.3);
            padding: 1rem;
            border-radius: 8px;
            margin-top: 1rem;
            font-size: 0.9rem;
            color: #f59e0b;
            text-align: center;
        }

        /* Features */
        .features {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
            gap: 2rem;
            margin-top: 4rem;
        }

        .feature-card {
            background: rgba(30, 41, 59, 0.6);
            backdrop-filter: blur(15px);
            padding: 2rem;
            border-radius: 16px;
            text-align: center;
            border: 1px solid rgba(255, 255, 255, 0.1);
            transition: all 0.3s ease;
        }

        .feature-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 20px 40px rgba(0, 0, 0, 0.2);
            border-color: rgba(0, 212, 255, 0.3);
        }

        .feature-icon {
            font-size: 3rem;
            background: linear-gradient(135deg, #00d4ff, #ff6b9d);
            -webkit-background-clip: text;
            background-clip: text;
            -webkit-text-fill-color: transparent;
            margin-bottom: 1rem;
            filter: drop-shadow(0 0 10px rgba(0, 212, 255, 0.3));
        }

        .feature-title {
            font-size: 1.3rem;
            font-weight: 700;
            color: white;
            margin-bottom: 1rem;
        }

        .feature-text {
            color: rgba(255, 255, 255, 0.8);
            line-height: 1.6;
        }

        /* Dashboard Styles */
        .dashboard-header {
            text-align: center;
            margin-bottom: 3rem;
        }

        .dashboard-title {
            font-size: 2.5rem;
            font-weight: 700;
            color: #ffffff;
            margin-bottom: 0.5rem;
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 1rem;
        }

        .dashboard-title i {
            background: linear-gradient(135deg, #00d4ff, #ff6b9d);
            -webkit-background-clip: text;
            background-clip: text;
            -webkit-text-fill-color: transparent;
            filter: drop-shadow(0 0 10px rgba(0, 212, 255, 0.3));
        }

        .dashboard-subtitle {
            font-size: 1.1rem;
            color: rgba(226, 232, 240, 0.7);
            font-weight: 400;
        }

        /* Stats Grid */
        .stats-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
            gap: 1.5rem;
            margin-bottom: 3rem;
        }

        .stat-card {
            background: rgba(30, 41, 59, 0.8);
            backdrop-filter: blur(20px);
            border-radius: 16px;
            padding: 1.5rem;
            border: 1px solid rgba(255, 255, 255, 0.1);
            display: flex;
            align-items: center;
            gap: 1rem;
            transition: all 0.3s ease;
        }

        .stat-card:hover {
            transform: translateY(-2px);
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.2);
            border-color: rgba(0, 212, 255, 0.3);
        }

        .stat-icon {
            width: 60px;
            height: 60px;
            border-radius: 12px;
            background: linear-gradient(135deg, #00d4ff, #0ea5e9);
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 1.5rem;
            color: white;
            flex-shrink: 0;
        }

        .stat-content {
            flex: 1;
        }

        .stat-number {
            font-size: 1.8rem;
            font-weight: 700;
            color: #ffffff;
            margin: 0;
            line-height: 1;
        }

        .stat-label {
            font-size: 1rem;
            font-weight: 600;
            color: #e2e8f0;
            margin: 0.25rem 0;
        }

        .stat-desc {
            font-size: 0.85rem;
            color: #94a3b8;
        }

        /* Dashboard Content */
        .dashboard-content {
            display: grid;
            grid-template-columns: 1fr 1fr;
            gap: 2rem;
            align-items: start;
        }

        .dashboard-card {
            background: rgba(30, 41, 59, 0.8);
            backdrop-filter: blur(20px);
            border-radius: 20px;
            border: 1px solid rgba(255, 255, 255, 0.1);
            overflow: hidden;
        }

        .card-header {
            padding: 2rem 2rem 1rem 2rem;
            border-bottom: 1px solid rgba(255, 255, 255, 0.1);
        }

        .card-title {
            font-size: 1.5rem;
            font-weight: 700;
            color: #ffffff;
            margin: 0 0 0.5rem 0;
            display: flex;
            align-items: center;
            gap: 0.75rem;
        }

        .card-title i {
            background: linear-gradient(135deg, #00d4ff, #ff6b9d);
            -webkit-background-clip: text;
            background-clip: text;
            -webkit-text-fill-color: transparent;
        }

        .card-subtitle {
            font-size: 0.9rem;
            color: #94a3b8;
            margin: 0;
        }

        /* Upload Card */
        .upload-card {
            padding: 2rem;
        }

        .upload-zone {
            border: 2px dashed rgba(0, 212, 255, 0.3);
            border-radius: 12px;
            padding: 3rem 2rem;
            text-align: center;
            margin: 1.5rem 0;
            transition: all 0.3s ease;
            cursor: pointer;
            background: rgba(0, 212, 255, 0.02);
        }

        .upload-zone:hover {
            border-color: rgba(0, 212, 255, 0.5);
            background: rgba(0, 212, 255, 0.05);
            transform: translateY(-2px);
        }

        .upload-zone.dragover {
            border-color: rgba(0, 212, 255, 0.7);
            background: rgba(0, 212, 255, 0.1);
            transform: scale(1.02);
        }

        .upload-icon {
            font-size: 3rem;
            background: linear-gradient(135deg, #00d4ff, #ff6b9d);
            -webkit-background-clip: text;
            background-clip: text;
            -webkit-text-fill-color: transparent;
            margin-bottom: 1rem;
        }

        .upload-content h3 {
            font-size: 1.2rem;
            color: #e2e8f0;
            margin-bottom: 0.5rem;
            font-weight: 600;
        }

        .upload-content p {
            color: #94a3b8;
            margin-bottom: 1rem;
        }

        .file-types {
            font-size: 0.85rem;
            color: #64748b;
            background: rgba(0, 212, 255, 0.1);
            padding: 0.5rem 1rem;
            border-radius: 20px;
            display: inline-block;
        }

        /* File Preview */
        .file-preview {
            background: rgba(0, 212, 255, 0.05);
            border: 1px solid rgba(0, 212, 255, 0.2);
            border-radius: 12px;
            padding: 1.5rem;
            margin: 1.5rem 0;
            display: none;
        }

        .preview-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 1rem;
        }

        .preview-header h4 {
            color: #e2e8f0;
            margin: 0;
            font-size: 1rem;
        }

        .remove-btn {
            background: rgba(239, 68, 68, 0.2);
            border: 1px solid rgba(239, 68, 68, 0.3);
            color: #ef4444;
            border-radius: 6px;
            padding: 0.25rem 0.5rem;
            cursor: pointer;
            font-size: 0.8rem;
        }

        .preview-content {
            display: flex;
            gap: 1rem;
            align-items: center;
        }

        .preview-image {
            width: 80px;
            height: 80px;
            object-fit: cover;
            border-radius: 8px;
            border: 2px solid rgba(0, 212, 255, 0.3);
        }

        .file-details {
            flex: 1;
        }

        .file-name {
            font-weight: 600;
            color: #00d4ff;
            margin-bottom: 0.25rem;
        }

        .file-size {
            font-size: 0.85rem;
            color: #94a3b8;
        }

        /* Analyze Button */
        .analyze-btn {
            background: linear-gradient(135deg, #10b981, #059669);
            color: white;
            border: none;
            padding: 1rem 2rem;
            border-radius: 12px;
            font-size: 1rem;
            font-weight: 600;
            cursor: pointer;
            transition: all 0.3s ease;
            width: 100%;
            display: none;
            margin-top: 1rem;
        }

        .analyze-btn:hover {
            transform: translateY(-2px);
            box-shadow: 0 10px 30px rgba(16, 185, 129, 0.3);
        }

        /* Loading Section */
        .loading-section {
            text-align: center;
            padding: 3rem 2rem;
            display: none;
        }

        .loading-content h4 {
            color: #e2e8f0;
            margin: 1rem 0 0.5rem 0;
            font-size: 1.1rem;
        }

        .loading-content p {
            color: #94a3b8;
            font-size: 0.9rem;
        }

        /* Results Card */
        .results-card {
            padding: 0;
            display: none;
        }

        .results-content {
            padding: 2rem;
        }

        .primary-result {
            background: rgba(0, 212, 255, 0.05);
            border: 1px solid rgba(0, 212, 255, 0.2);
            border-radius: 12px;
            padding: 1.5rem;
            margin-bottom: 2rem;
            text-align: center;
        }

        .primary-diagnosis {
            font-size: 1.5rem;
            font-weight: 700;
            margin-bottom: 0.5rem;
        }

        .primary-confidence {
            font-size: 1rem;
            opacity: 0.8;
        }

        .diagnosis-normal {
            color: #10b981;
        }

        .diagnosis-condition {
            color: #ef4444;
        }

        .detailed-results h4 {
            color: #e2e8f0;
            margin-bottom: 1rem;
            font-size: 1.1rem;
        }


        .result-item {
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 1rem;
            background: rgba(255, 255, 255, 0.02);
            border: 1px solid rgba(255, 255, 255, 0.05);
            border-radius: 8px;
            margin-bottom: 0.75rem;
        }

        .result-item:last-child {
            margin-bottom: 0;
        }

        .condition-name {
            font-weight: 600;
            color: #e2e8f0;
        }

        .condition-probability {
            font-weight: 600;
            color: #00d4ff;
        }

        .probability-bar {
            width: 100%;
            height: 4px;
            background: rgba(255, 255, 255, 0.1);
            border-radius: 2px;
            margin-top: 0.5rem;
            overflow: hidden;
        }

        .probability-fill {
            height: 100%;
            background: linear-gradient(90deg, #00d4ff, #0ea5e9);
            border-radius: 2px;
            transition: width 0.5s ease;
        }

        /* Medical Disclaimer */
        .medical-disclaimer {
            background: rgba(245, 158, 11, 0.1);
            border: 1px solid rgba(245, 158, 11, 0.3);
            border-radius: 12px;
            padding: 1.5rem;
            margin-top: 2rem;
            display: flex;
            gap: 1rem;
        }

        .disclaimer-icon {
            color: #f59e0b;
            font-size: 1.2rem;
            flex-shrink: 0;
        }

        .disclaimer-content h5 {
            color: #f59e0b;
            margin: 0 0 0.5rem 0;
            font-size: 1rem;
        }

        .disclaimer-content p {
            color: #fbbf24;
            margin: 0;
            font-size: 0.9rem;
            line-height: 1.4;
        }

        /* Responsive */
        @media (max-width: 1024px) {
            .dashboard-content {
                grid-template-columns: 1fr;
            }
        }

        @media (max-width: 768px) {
            .dashboard-title {
                font-size: 2rem;
            }
            
            .stats-grid {
                grid-template-columns: 1fr;
            }
            
            .upload-zone {
                padding: 2rem 1rem;
            }
            
            .card-header {
                padding: 1.5rem;
            }
            
            .upload-card {
                padding: 1.5rem;
            }
        }
    </style>
</head>
<body>
    <header class="header">
        <div class="container">
            <nav class="nav">
                <div class="logo">
                    <i class="fas fa-eye"></i>
                    <span>EyeCare AI</span>
                </div>
            </nav>
        </div>
    </header>

    <main class="main-content">
        <div class="container">
            <!-- Dashboard Header -->
            <section class="dashboard-header">
                <h1 class="dashboard-title">
                    <i class="fas fa-eye"></i>
                    Eye Disease Detection Dashboard
                </h1>
                <p class="dashboard-subtitle">
                    Advanced AI-powered retinal analysis for medical diagnosis
                </p>
            </section>

            <!-- Stats Cards -->
            <section class="stats-grid">
                <div class="stat-card">
                    <div class="stat-icon">
                        <i class="fas fa-brain"></i>
                    </div>
                    <div class="stat-content">
                        <h3 class="stat-number">4</h3>
                        <p class="stat-label">Disease Types</p>
                        <span class="stat-desc">Detectable Conditions</span>
                    </div>
                </div>
                <div class="stat-card">
                    <div class="stat-icon">
                        <i class="fas fa-clock"></i>
                    </div>
                    <div class="stat-content">
                        <h3 class="stat-number">&lt;5s</h3>
                        <p class="stat-label">Analysis Time</p>
                        <span class="stat-desc">Average Processing</span>
                    </div>
                </div>
                <div class="stat-card">
                    <div class="stat-icon">
                        <i class="fas fa-shield-alt"></i>
                    </div>
                    <div class="stat-content">
                        <h3 class="stat-number">95%+</h3>
                        <p class="stat-label">Accuracy</p>
                        <span class="stat-desc">Model Performance</span>
                    </div>
                </div>
                <div class="stat-card">
                    <div class="stat-icon">
                        <i class="fas fa-images"></i>
                    </div>
                    <div class="stat-content">
                        <h3 class="stat-number">4.2K+</h3>
                        <p class="stat-label">Training Images</p>
                        <span class="stat-desc">Dataset Size</span>
                    </div>
                </div>
            </section>

            <!-- Main Dashboard Content -->
            <section class="dashboard-content">
                <!-- Upload Section -->
                <div class="dashboard-card upload-card">
                    <div class="card-header">
                        <h2 class="card-title">
                            <i class="fas fa-upload"></i>
                            Upload Retinal Image
                        </h2>
                        <p class="card-subtitle">Select an image for AI analysis</p>
                    </div>
                    
                    <form id="predictionForm" enctype="multipart/form-data">
                        <div class="upload-zone" id="uploadArea">
                            <div class="upload-icon">
                                <i class="fas fa-cloud-upload-alt"></i>
                            </div>
                            <div class="upload-content">
                                <h3>Drag & Drop your image here</h3>
                                <p>or click to browse files</p>
                                <div class="file-types">PNG, JPG, JPEG supported</div>
                            </div>
                            <input type="file" id="fileInput" name="file" class="file-input" accept=".png,.jpg,.jpeg">
                        </div>

                        <div class="file-preview" id="fileInfo">
                            <div class="preview-header">
                                <h4>Selected Image</h4>
                                <button type="button" class="remove-btn" onclick="removeFile()">
                                    <i class="fas fa-times"></i>
                                </button>
                            </div>
                            <div class="preview-content">
                                <img id="imagePreview" class="preview-image" alt="Preview">
                                <div class="file-details">
                                    <div class="file-name" id="fileName"></div>
                                    <div class="file-size" id="fileSize"></div>
                                </div>
                            </div>
                        </div>

                        <button type="submit" class="analyze-btn" id="predictBtn">
                            <i class="fas fa-microscope"></i>
                            Start Analysis
                        </button>
                    </form>

                    <div class="loading-section" id="loading">
                        <div class="loading-content">
                            <div class="spinner"></div>
                            <h4>Analyzing Image...</h4>
                            <p>Our AI is processing your retinal image</p>
                        </div>
                    </div>
                </div>

                <!-- Results Section -->
                <div class="dashboard-card results-card" id="resultSection">
                    <div class="card-header">
                        <h2 class="card-title">
                            <i class="fas fa-chart-line"></i>
                            Analysis Results
                        </h2>
                        <p class="card-subtitle">AI-powered diagnosis results</p>
                    </div>
                    
                    <div class="results-content">
                        <div class="primary-result" id="primaryResult">
                            <!-- Primary result will be inserted here -->
                        </div>
                        
                        <div class="detailed-results">
                            <h4>Detailed Analysis</h4>
                            <div class="results-list" id="resultsList">
                                <!-- Detailed results will be inserted here -->
                            </div>
                        </div>
                        
                        <div class="medical-disclaimer">
                            <div class="disclaimer-icon">
                                <i class="fas fa-exclamation-triangle"></i>
                            </div>
                            <div class="disclaimer-content">
                                <h5>Medical Disclaimer</h5>
                                <p>This AI tool is for educational and research purposes only. Always consult with a qualified healthcare professional for proper medical diagnosis and treatment.</p>
                            </div>
                        </div>
                    </div>
                </div>
            </section>
        </div>
    </main>

    <script>
        const uploadArea = document.getElementById('uploadArea');
        const fileInput = document.getElementById('fileInput');
        const fileInfo = document.getElementById('fileInfo');
        const fileName = document.getElementById('fileName');
        const imagePreview = document.getElementById('imagePreview');
        const predictBtn = document.getElementById('predictBtn');
        const form = document.getElementById('predictionForm');
        const loading = document.getElementById('loading');
        const resultSection = document.getElementById('resultSection');
        const resultText = document.getElementById('resultText');

        // Drag and drop functionality
        uploadArea.addEventListener('dragover', (e) => {
            e.preventDefault();
            uploadArea.classList.add('dragover');
        });

        uploadArea.addEventListener('dragleave', () => {
            uploadArea.classList.remove('dragover');
        });

        uploadArea.addEventListener('drop', (e) => {
            e.preventDefault();
            uploadArea.classList.remove('dragover');
            const files = e.dataTransfer.files;
            if (files.length > 0) {
                handleFile(files[0]);
            }
        });

        uploadArea.addEventListener('click', () => {
            fileInput.click();
        });

        fileInput.addEventListener('change', (e) => {
            if (e.target.files.length > 0) {
                handleFile(e.target.files[0]);
            }
        });

        function handleFile(file) {
            if (!file.type.startsWith('image/')) {
                alert('Please select a valid image file (PNG, JPG, JPEG)');
                return;
            }

            fileName.textContent = file.name;
            document.getElementById('fileSize').textContent = formatFileSize(file.size);
            fileInfo.style.display = 'block';
            predictBtn.style.display = 'block';

            // Show image preview
            const reader = new FileReader();
            reader.onload = (e) => {
                imagePreview.src = e.target.result;
            };
            reader.readAsDataURL(file);

            // Hide previous results
            resultSection.style.display = 'none';
        }

        function removeFile() {
            fileInput.value = '';
            fileInfo.style.display = 'none';
            predictBtn.style.display = 'none';
            resultSection.style.display = 'none';
        }

        function formatFileSize(bytes) {
            if (bytes === 0) return '0 Bytes';
            const k = 1024;
            const sizes = ['Bytes', 'KB', 'MB', 'GB'];
            const i = Math.floor(Math.log(bytes) / Math.log(k));
            return parseFloat((bytes / Math.pow(k, i)).toFixed(2)) + ' ' + sizes[i];
        }

        form.addEventListener('submit', async (e) => {
            e.preventDefault();
            
            if (!fileInput.files[0]) {
                alert('Please select an image file first');
                return;
            }

            // Show loading
            loading.style.display = 'block';
            predictBtn.disabled = true;
            resultSection.style.display = 'none';

            try {
                const formData = new FormData();
                formData.append('file', fileInput.files[0]);

                const response = await fetch('/predict', {
                    method: 'POST',
                    body: formData
                });

                const result = await response.json();

                if (result.success) {
                    displayResult(result.prediction, result.confidence, result.probabilities);
                } else {
                    alert(result.error || 'An error occurred while processing your image.');
                }

            } catch (error) {
                console.error('Error:', error);
                alert('An error occurred while processing your image. Please try again.');
            } finally {
                loading.style.display = 'none';
                predictBtn.disabled = false;
            }
        });

        function displayResult(prediction, confidence, probabilities) {
            // Primary result
            const primaryResult = document.getElementById('primaryResult');
            const diagnosisClass = prediction === 'Normal' ? 'diagnosis-normal' : 'diagnosis-condition';
            
            primaryResult.innerHTML = `
                <div class="primary-diagnosis ${diagnosisClass}">
                    ${prediction}
                </div>
                <div class="primary-confidence">
                    Confidence: ${(confidence * 100).toFixed(1)}%
                </div>
            `;

            // Detailed results list
            if (probabilities) {
                const resultsList = document.getElementById('resultsList');
                const sortedResults = Object.entries(probabilities)
                    .sort(([,a], [,b]) => b - a);
                
                resultsList.innerHTML = sortedResults.map(([condition, prob]) => {
                    const percentage = (prob * 100).toFixed(1);
                    return `
                        <div class="result-item">
                            <div>
                                <div class="condition-name">${condition}</div>
                                <div class="probability-bar">
                                    <div class="probability-fill" style="width: ${percentage}%"></div>
                                </div>
                            </div>
                            <div class="condition-probability">${percentage}%</div>
                        </div>
                    `;
                }).join('');
            }
            
            resultSection.style.display = 'block';
            
            // Smooth scroll to results
            resultSection.scrollIntoView({ behavior: 'smooth' });
        }
    </script>
</body>
</html>